<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <UseWPF>true</UseWPF>
    <OutputType>WinExe</OutputType>
    <SatelliteResourceLanguages>En</SatelliteResourceLanguages>
  </PropertyGroup>

  <PropertyGroup>
    <Version>2.8.1</Version>
    <Authors>Ali Torabi</Authors>
    <RepositoryType>Git</RepositoryType>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <AssemblyName>BingWallpaper</AssemblyName>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    <Copyright>Copyright Â© Bing Wallpaper</Copyright>
    <RepositoryUrl>https://github.com/torabi-ali/BingWallpaper</RepositoryUrl>
    <Description>BingWallpaper is a windows application developed to download Bing images everday and store it in your local computer.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="NLog.config" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="logo.ico" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="3.0.0" />
    <PackageReference Include="MaterialDesignThemes" Version="5.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.6" PrivateAssets="all" TreatAsUsed="true" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.6" />
    <PackageReference Include="NLog.Extensions.Logging" Version="5.3.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\App\App.csproj" />
  </ItemGroup>

</Project>